@@ -114,7 +114,7 @@ if get_option('compat_cli') and get_option('man')
 endif
 
 install_data(['uefi_capsule.conf'],
-  install_dir:  join_paths(sysconfdir, 'fwupd')
+  install_dir:  join_paths(sysconfdir_install, 'fwupd')
 )
 
